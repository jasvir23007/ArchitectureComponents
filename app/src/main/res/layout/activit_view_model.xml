<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="First Player"
              app:layout_constraintTop_toBottomOf="@id/ivFirstPlus"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toLeftOf="@+id/tvScoreOne"
              android:id="@+id/tvNameOne"
    />


    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintLeft_toLeftOf="parent"
               android:padding="5dp"
               android:background="@drawable/oval_shape"
               app:layout_constraintRight_toRightOf="parent"
               android:src="@drawable/ic_add_black_24dp"
               android:layout_marginTop="100dp"
               android:id="@+id/ivFirstPlus"/>


    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              tools:text="1"
              android:textSize="18sp"
              android:textColor="#000000"
              android:layout_marginTop="5dp"
              android:layout_marginBottom="5dp"
              app:layout_constraintTop_toBottomOf="@id/ivFirstPlus"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              android:id="@+id/tvScoreOne"/>

    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:layout_constraintTop_toBottomOf="@id/tvScoreOne"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintRight_toRightOf="parent"
               android:src="@drawable/ic_remove_black_24dp"
               android:background="@drawable/oval_shape"

               android:padding="5dp"
               android:id="@+id/ivFirstMinus"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Second Player"
              app:layout_constraintTop_toBottomOf="@id/ivSecondPlus"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toLeftOf="@+id/tvScoreSecond"
              android:id="@+id/tvNameTwo"/>


    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:layout_constraintTop_toBottomOf="@+id/ivFirstMinus"
               app:layout_constraintLeft_toLeftOf="parent"
               android:padding="5dp"
               android:background="@drawable/oval_shape"

               app:layout_constraintRight_toRightOf="parent"
               android:src="@drawable/ic_add_black_24dp"
               android:layout_marginTop="100dp"
               android:id="@+id/ivSecondPlus"/>


    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              tools:text="11"
              android:layout_marginTop="5dp"
              android:textSize="18sp"
              android:textColor="#000000"
              android:layout_marginBottom="5dp"
              app:layout_constraintTop_toBottomOf="@id/ivSecondPlus"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              android:id="@+id/tvScoreSecond"/>

    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:layout_constraintTop_toBottomOf="@id/tvScoreSecond"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintRight_toRightOf="parent"
               android:src="@drawable/ic_remove_black_24dp"
               android:padding="5dp"
               android:background="@drawable/oval_shape"

               android:id="@+id/ivSecondMinus"/>


</android.support.constraint.ConstraintLayout>